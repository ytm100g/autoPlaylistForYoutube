{
  "manifest_version": 2,
  "name": "autoPlaylistForYoutube",
  "version": "1.0",
  "description": "開いてるタブからYoutubeの再生リストを自動で作成します。",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "icons" : {
    "128": "icon.png",
    "256": "icon256.png"
  },
  "content_scripts": [{
     "js": ["js/jquery-3.2.1.min.js", "js/popup.js", "js/youtube.js"],
     "matches": ["http://*/*", "https://*/*"]
   }],
   "content_security_policy": "script-src 'self' https://www.youtube.com/player_api https://s.ytimg.com; object-src 'self'"
}
