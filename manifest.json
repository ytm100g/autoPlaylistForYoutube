{
  "manifest_version": 2,
  "name": "easyCopyTitle&URL",
  "version": "1.0",
  "description": "ページのタイトルとURLを簡単にシェアできるようにクリップボードにコピーします",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "icons" : {
    "128": "icon.png",
    "256": "icon256.png"
  },
  "background": {
    "scripts": ["js/script.js"]
  },
  "options_page": "options.html"
}
